<style>
  footer {
    @apply py-[8vh] border-t-2 w-[80%] mx-auto;
  }
  .phone-info {
    @apply w-full flex justify-center gap-x-5 md:hidden;
  }
  .phone-info svg {
    @apply size-8;
  }
  .desktop-info a {
